<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
                         http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="1" author="your_name">
        <ext:createCollection collectionName="users">
            <ext:options>
                <ext:option key="throughput" value="400"/>
            </ext:options>
        </ext:createCollection>
    </changeSet>

    <changeSet id="2" author="your_name">
        <ext:createIndex collectionName="users">
            <ext:keys>
                <ext:key>email</ext:key>
            </ext:keys>
            <ext:options>
                <ext:option key="unique" value="true"/>
            </ext:options>
        </ext:createIndex>
    </changeSet>

    <changeSet id="3" author="your_name">
        <ext:insertMany collectionName="users">
            <ext:documents>
                [
                    {
                        "name": "John Doe",
                        "email": "<a href="mailto:john@example.com">john@example.com</a>",
                        "age": 30
                    },
                    {
                        "name": "Jane Smith",
                        "email": "<a href="mailto:jane@example.com">jane@example.com</a>",
                        "age": 25
                    }
                ]
            </ext:documents>
        </ext:insertMany>
    </changeSet>

</databaseChangeLog>
